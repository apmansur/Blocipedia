 <h1>Wikis</h1>
 
 <div class="row">
  <div class="col-md-8">
  <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
</div>
<br>
   <div class="col-md-8" style="padding: 1em">
     <% Wiki.all.each do |wiki| %>
     <% if !wiki.private || current_user.premium? || current_user.admin? %> 
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">

             <%= link_to wiki.title, wiki %>
           </h4>
           <small>
             <%= markdown(wiki.body) %>
           </small>
         </div>
       </div>
       <% end %>
     <% end %>
   </div>

 </div>